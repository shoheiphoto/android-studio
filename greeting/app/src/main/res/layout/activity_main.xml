<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ID_TextMidori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="なにしてあそぶ？"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/ID_BTN3"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/ID_BTN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="←"
        app:layout_constraintBaseline_toBaselineOf="@+id/ID_BTN5"
        app:layout_constraintEnd_toStartOf="@+id/ID_BTN5" />

    <Button
        android:id="@+id/ID_BTN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:text="→"
        app:layout_constraintBaseline_toBaselineOf="@+id/ID_BTN1"
        app:layout_constraintStart_toEndOf="@+id/ID_BTN5" />

    <Button
        android:id="@+id/ID_BTN3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:text="↑"
        app:layout_constraintBottom_toTopOf="@+id/ID_BTN5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ID_BTN4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="↓"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ID_MIDORI"
        android:layout_width="120px"
        android:layout_height="120px"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/ID_TextMidori"
        app:layout_constraintEnd_toEndOf="@+id/ID_TextMidori"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="@+id/ID_TextMidori"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <Button
        android:id="@+id/ID_BTN5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="ホーム"
        app:layout_constraintBottom_toTopOf="@+id/ID_BTN4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ID_Star"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:backgroundTint="?android:attr/textColorHighlightInverse"
        app:layout_constraintEnd_toEndOf="@+id/ID_TextStar"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/ID_TextStar"
        app:layout_constraintTop_toBottomOf="@+id/ID_TextStar"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/ID_TextStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="やあ"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329" />

    <Button
        android:id="@+id/ID_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/teal_700"
        android:text="おおきくなるよ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ID_Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/teal_700"
        android:text="ちいさくなるよ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_Big" />

    <TextView
        android:id="@+id/textAisatsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="あいさつ"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aisatsu_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textAisatsu"
        app:layout_constraintStart_toEndOf="@+id/textAisatsu" />

    <ImageView
        android:id="@+id/ID_Batsu"
        android:layout_width="58dp"
        android:layout_height="65dp"

        app:layout_constraintBottom_toTopOf="@+id/ID_TextBatsu"
        app:layout_constraintEnd_toEndOf="@+id/ID_TextBatsu"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/ID_TextBatsu"
        app:srcCompat="@drawable/character_water" />

    <TextView
        android:id="@+id/ID_TextBatsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="おにごっこしよー"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647" />

    <TextView
        android:id="@+id/textOnigokko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="おにごっこつかまえた"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAisatsu" />

    <TextView
        android:id="@+id/onigokko_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textOnigokko"
        app:layout_constraintStart_toEndOf="@+id/textOnigokko" />

    <ImageView
        android:id="@+id/ID_Zonbi"
        android:layout_width="108dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toTopOf="@+id/ID_TextZonbi"
        app:layout_constraintEnd_toEndOf="@+id/ID_TextZonbi"
        app:layout_constraintStart_toStartOf="@+id/ID_TextZonbi"
        app:srcCompat="@drawable/fantasy_zombie_man" />

    <TextView
        android:id="@+id/ID_TextZonbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ゾンビだぞ～"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.712"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>